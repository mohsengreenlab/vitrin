# Application Configuration
NODE_ENV=production
PORT=3008

# SingleStore Database Configuration
# CRITICAL: These values MUST match your SingleStore cluster credentials
SINGLESTORE_HOST=your-cluster-host.svc.singlestore.com
SINGLESTORE_PORT=3306
SINGLESTORE_USER=your-username
SINGLESTORE_PASSWORD=your-password
SINGLESTORE_DATABASE=your-database-name

# Session Configuration
SESSION_SECRET=generate-a-secure-random-string-here

# Connection Pool Settings (adjust based on your needs)
# Default: 10 connections, 20 second timeout
# Increase POOL_SIZE if you expect high concurrent usage
# Increase TIMEOUT if you have slow queries or network latency
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=20000

# SSL/TLS Configuration
# The SSL certificate path is relative to the app directory
# Leave as-is unless you move the certificate file
SSL_CERT_PATH=/home/partnersystems_main/app/certs/singlestore_bundle.pem
SSL_REJECT_UNAUTHORIZED=true
